{
  "name": "study_timer",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "concurrently \"npm:serve\" \"npm:electron\"",
    "serve": "cd Timer-frontend && npm run dev",
    "electron": "wait-on http://localhost:5173 && electron .",
    "start": "electron .",
    "build:react": "cd Timer-frontend && npm run build",
    "dist": "electron-builder"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.0",
    "electron": "^37.2.4",
    "electron-builder": "^26.0.12",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.11",
    "wait-on": "^8.0.4"
  },
  "dependencies": {
    "react-router-dom": "^7.8.2"
  },
  "build": {
    "appId": "com.study.timer",
    "productName": "Study Timer",
    "directories": {
      "buildResources": "assets",
      "output": "release"
    },
    "files": [
      "main.js",
      "preload.js",
      "package.json",
      "Timer-frontend/dist/**/*"
    ]
  }
}
